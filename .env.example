# Database Configuration - Dual Schema Setup
# ============================================
# Development: PostgreSQL/Supabase (Default)
# Production: Azure SQL Server

# Current Active Database (used by schema.prisma)
# This should point to your primary database connection
DATABASE_URL="postgresql://user:password@host:6543/postgres"

# Development Database - PostgreSQL/Supabase
# Get these credentials from your Supabase project dashboard
# https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/database
DEV_DATABASE_URL="postgresql://user:password@host:6543/postgres"

# Production Database - Azure SQL Server (Optional)
# Only needed if you're using Azure SQL Server for production
# PROD_DATABASE_URL="sqlserver://server.database.windows.net:1433;database=dbname;user=username;password=password;Encrypt=true;TrustServerCertificate=false"

# Shadow Database for Migrations (SQL Server only)
# SHADOW_DATABASE_URL="sqlserver://server.database.windows.net:1433;database=dbname_shadow;user=username;password=password;Encrypt=true;TrustServerCertificate=false"

# Authentication
# Generate a secure random string for JWT signing
# You can use: openssl rand -base64 32
JWT_SECRET="your-secure-random-jwt-secret-here"

# Supabase Configuration
# Get these from your Supabase project dashboard
# https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Development Environment Flags
# Set to "true" when running in WebContainer/StackBlitz environment
WEB_CONTAINER="false"
STACKBLITZ="false"

# Node Environment
NODE_ENV="development"
